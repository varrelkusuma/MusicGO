extends ../_bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') MusicGO
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href="/home") Home
					li
						a(href="/about") About
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
							| Services 
							span.caret
						ul.dropdown-menu(role='menu')
							li
								a(href="/charts") All Services
							li.divider
							li.dropdown-header Charts
							li
								a(href="/charts/lastfm") Last.FM Charts
							li
								a(href="/charts/mixed") Mixed Charts

		
	.container.theme-showcase(role='main')
		// Main jumbotron for a primary marketing message or call to action
		.jumbotron
			h1.center MusicGO
			p
				| MusicGO is an API to get latest music charts in one-go. Enjoy!

		.page-header
			h1 Details and Constraints of MusicGO 
		.well
			p
				| The data used here is got by scrapping manually, so it's not automatically update. Sorry for the inconvenience :(
		.well
			p
				| The artist and song here are choosen randomly and not the top ones from music charts
		.well
			p
				| Please login first to use the services :)



