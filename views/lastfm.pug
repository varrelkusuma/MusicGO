extends ../_bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') Bootstrap theme
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href="/") Home
					li
						a(href="/about") About
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
							| Services 
							span.caret
						ul.dropdown-menu(role='menu')
							li
								a(href="/charts") All Services
							li.divider
							li.dropdown-header Charts
							li
								a(href="/charts/lastfm") Last.FM Charts
							li
								a(href="/charts/mixed") Mixed Charts
		
	.container.theme-showcase(role='main')
		// Main jumbotron for a primary marketing message or call to action
		.jumbotron
			h1.center Last.FM Charts
			p
				| Last updated: 20 December 2018.
		.page-header
			h1 Get Full Charts (JSON Files)
		p
			button.btn.btn-lg.btn-primary(type='button') Song Chart
			button.btn.btn-lg.btn-info(type='button') Artist Chart
			button.btn.btn-lg.btn-success(type='button') Album Chart

		.page-header
			h1 Sneakpeak of charts
		.row
			.col-md-6
				+table(["#","Artist Name","Listener","Streams"],[["1","Blackpink","14.221.793","59.260.389"],["2","Zion.T","469.759","1.293.880"],["3","Taylor Swift","22.229.171","85.667.321"]])
			.col-md-6
				+table(["#","Song Name","Artist Name","Streams"],[["1","Bang Bang Bang","Bigbang","503.450"],["2","Paradise","Coldplay","8.960.320"],["3","Payphone","Maroon 5","3.050.210"]])