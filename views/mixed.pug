extends ../_bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') MusicGO
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href="/") Home
					li
						a(href="/about") About
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
							| Services 
							span.caret
						ul.dropdown-menu(role='menu')
							li
								a(href="/charts") All Services
							li.divider
							li.dropdown-header Charts
							li
								a(href="/charts/lastfm") Last.FM Charts
							li
								a(href="/charts/mixed") Mixed Charts
		
	.container.theme-showcase(role='main')
		// Main jumbotron for a primary marketing message or call to action
		.jumbotron
			h1.center Mixed Charts (Last.FM + Spotify + Youtube)
			p
				| Last updated: 20 December 2018.
		.page-header
			h1 Get Full Charts (JSON Files)
		p
			a.btn.btn-lg.btn-primary(type='button' href="/charts/mixed/mixed_song") Song Chart
			a.btn.btn-lg.btn-info(type='button' href="/charts/mixed/mixed_artist") Artist Chart

		.page-header
			h1 Sneakpeak of charts
		.row
			.col-md-6
				+table(["#","Artist Name","Listener","Streams"],[["1","Blackpink","706.129","110.237.610"],["2","EXID","529.736","76.573.907"],["3","Zion.T","337.219","51.311.702"]])
			.col-md-6
				+table(["#","Song Name","Artist Name","Listener"],[["1","Ddu Ddu Ddu","Blackpink","1.048.858"],["2","Fantastic Baby","Bigbang","941.997"],["3","Treasure","Bruno Mars","1.805.497"]])